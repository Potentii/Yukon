<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sharman.yukon.view.activities.ExamCreateActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nome"
        android:id="@+id/nameExamTv"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Matéria"
        android:id="@+id/matterExamTv"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/nameExamTv"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Data"
        android:id="@+id/dateExamTv"
        android:layout_below="@+id/matterExamTv"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameExamInput"
        android:layout_above="@+id/matterExamTv"
        android:layout_toEndOf="@+id/matterExamTv" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subjectExamInput"
        android:layout_alignBottom="@+id/matterExamTv"
        android:layout_toEndOf="@+id/matterExamTv" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dateExamInput"
        android:layout_alignBottom="@+id/dateExamTv"
        android:layout_toEndOf="@+id/matterExamTv" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar Questões"
        android:id="@+id/addQuestionsBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/subjectExamInput"
        android:textSize="18dp"
        android:onClick="callQuestionsCreateActivity" />

</RelativeLayout>
