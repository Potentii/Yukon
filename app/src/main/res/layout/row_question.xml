<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row.question.height"
    android:background="?attr/selectableItemBackground"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp">

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"

            android:background="@drawable/ic_circle_24dp"
            android:backgroundTint="@color/primary"
            android:src="@drawable/ic_circle_24dp"
            android:tint="@color/primary_grey"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/questionIndexOut"
            android:textSize="16sp"
            android:textAlignment="gravity"
            android:gravity="center"
            android:singleLine="false"
            android:textColor="@color/primary_grey_dark"
            android:textStyle="bold"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textOut"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/primary_grey_dark"
        android:singleLine="true"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_weight="1"
        android:layout_marginEnd="12dp"/>

    <ImageButton
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:id="@+id/removeBtn"
        android:layout_weight="0"
        android:background="@color/transparent"
        android:src="@drawable/ic_cancel_24dp"
        android:tint="@color/icon_dark"
        android:scaleType="center"
        />
</LinearLayout>