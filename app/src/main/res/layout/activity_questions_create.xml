<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activityMargin"
    tools:context="com.sharman.yukon.view.activities.QuestionsCreateActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/inputLineBottomMargin" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/questionTitleImg"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/common_ic_googleplayservices"
                    android:scaleType="fitStart" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/questionTitleIn"
                    android:hint="@string/inputHint.questionCreate.title"
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:maxLines="8"
                    android:layout_gravity="top"
                    android:layout_marginLeft="@dimen/inputLeftMargin" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/inputLineBottomMargin" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/questionWeightImg"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/common_ic_googleplayservices" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/questionWeightIn"
                    android:hint="@string/inputHint.questionCreate.weight"
                    android:layout_marginLeft="@dimen/inputLeftMargin"
                    android:inputType="numberDecimal"
                    android:numeric="integer|decimal"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/inputLineBottomMargin" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/common_ic_googleplayservices" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/answerTypeSpinner"
                    android:layout_marginLeft="@dimen/inputLeftMargin"
                    android:entries="@array/spinner_answerType"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/inputLineBottomMargin"
                android:id="@+id/alternativesRow">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView3"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/common_ic_googleplayservices" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/questionAlternativesIn"
                    android:hint="@string/inputHint.questionCreate.alternatives"
                    android:layout_marginLeft="@dimen/inputLeftMargin"
                    android:editable="false"
                    android:onClick="questionAlternativesIn_onCLick" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="@dimen/addCircularButtonSize"
        android:layout_height="@dimen/addCircularButtonSize"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/circle"
        android:elevation="@dimen/addCircularButtonElevation">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="addQuestionBtn_onClick"
            android:background="@color/transparent"
            android:text="+"
            android:textColor="#ffffff"
            android:textSize="@dimen/addCircularButtonTextSize" />

    </RelativeLayout>
</RelativeLayout>
