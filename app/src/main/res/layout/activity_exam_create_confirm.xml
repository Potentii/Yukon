<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sharman.yukon.view.activities.creation.ExamCreateConfirmActivity">

    <Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar">

        <include
            layout="@layout/action_info_photo"
            style="@style/infoPhotoInclude"/>
    </Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            style="@style/inputListLinearLayout">

            <LinearLayout
                style="@style/inputContainer">

                <ImageView
                    style="@style/imageLabel"
                    android:src="@drawable/ic_person_add_24dp" />

                <android.widget.EditText
                    style="@style/labeledInput"
                    android:hint="@string/inputHint.examCreateConfirm.students"
                    android:editable="false"
                    android:onClick="studentIn_onClick"
                    android:focusable="false" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
