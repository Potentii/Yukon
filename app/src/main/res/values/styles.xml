<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">



    <!-- * Main * -->
    <style name="YukonMainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/ActionBar</item>
        <item name="actionBarStyle">@style/ActionBar</item>

        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorBackground">@color/primary_grey</item>
        <item name="android:colorForeground">#ff00ff</item>
        <item name="android:colorForegroundInverse">#ff00ff</item>
    </style>


    <!-- * Actionbar * -->
    <style name="ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background" tools:ignore="NewApi">@color/primary</item>
        <item name="background">@color/primary</item>

        <item name="android:elevation" tools:ignore="NewApi">0dp</item>
        <item name="elevation">0dp</item>
    </style>


    <!-- * Toolbar * -->
    <style name="toolbar">
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?android:attr/actionBarSize</item>
        <item name="android:background">?android:attr/colorPrimary</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:elevation">0dp</item>
    </style>




    <!-- * Input List LinearLayout * -->
    <style name="inputListLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>

        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>


    <!-- * Input Container * -->
    <style name="inputContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>

        <item name="android:layout_marginBottom">@dimen/input_container_vertical_margin</item>
    </style>


    <!-- * Input Image Label * -->
    <style name="imageLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">@color/input_icon</item>
    </style>

    <style name="imageLabelMultiline" parent="imageLabel">
        <item name="android:scaleType">fitStart</item>
    </style>


    <!-- * Labeled Entry * -->
    <style name="labeledEntry">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/input_start_margin</item>
    </style>

    <!-- * Labeled Input * -->
    <style name="labeledInput" parent="labeledEntry">
        <item name="android:singleLine">true</item>
    </style>
    <style name="labeledInputMultiline" parent="labeledInput">
        <item name="android:singleLine">false</item>
    </style>

    <!-- * Labeled Span * -->
    <style name="labeledSpan" parent="labeledEntry">
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="labeledSpanMultiline" parent="labeledSpan">
        <item name="android:singleLine">false</item>
    </style>




    <!-- * Floating Action Button Container * -->
    <style name="floatingActionButtonContainer">
        <item name="android:layout_width">@dimen/floating_action_button_size</item>
        <item name="android:layout_height">@dimen/floating_action_button_size</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:elevation">@dimen/floating_action_button_elevation</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>


    <!-- * Floating Action Button * -->
    <style name="floatingActionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">@dimen/floating_action_button_text_size</item>
    </style>




    <!-- * Info Photo Include * -->
    <style name="infoPhotoInclude">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>























